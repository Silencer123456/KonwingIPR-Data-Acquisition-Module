<GridPane hgap="5.0" vgap="5.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="knowingipr.dam.controller.DetailController">

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
        <ColumnConstraints halignment="LEFT" hgrow="ALWAYS" />
    </columnConstraints>

    <Label text="Name" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <Label text="Description" GridPane.columnIndex="0" GridPane.rowIndex="1" />

    <TextField fx:id="sourceNameTextField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
    <TextField fx:id="descriptionTextField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   <Label text="URL" GridPane.rowIndex="2" />
   <Label text="Category type" GridPane.rowIndex="3" />
   <Label text="Licence type" GridPane.rowIndex="4" />
   <TextField fx:id="urlTextField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   <TextField fx:id="categoryTypeTextField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   <TextField fx:id="licenceTypeTextField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   <Label text="Scheme file" GridPane.rowIndex="7" />
   <Label text="Mapping file" GridPane.rowIndex="8" />
   <Label text="Licence file" GridPane.rowIndex="9" />
   <Label fx:id="schemeFileLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="7" />
   <Label fx:id="mappingFileLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="8" />
   <Label fx:id="licenceFileLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="9" />
   <Label text="Date last updated" GridPane.rowIndex="5" />
   <Label text="Update interval" GridPane.rowIndex="6" />
   <TextField fx:id="updateIntervalTextField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
   <Label fx:id="dateLastUpdatedLabel" text="Label" GridPane.columnIndex="1" GridPane.rowIndex="5" />

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>

</GridPane>
